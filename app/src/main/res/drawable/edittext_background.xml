<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color of the EditText -->
    <solid android:color="#2196F3" />

    <!-- Border (stroke) of the EditText -->
    <stroke
        android:width="2dp"
        android:color="#00BCD4" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Padding inside the EditText -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="8dp"
        android:bottom="8dp" />
</shape>
